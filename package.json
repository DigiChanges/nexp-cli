{
  "name": "nexp-cli",
  "version": "1.18.2",
  "description": "NExp CLI",
  "homepage": "https://digichanges.github.io/node-experience/#/",
  "bin": {
    "nexp-cli": "bin/index.js"
  },
  "author": {
    "name": "Nathan Russo",
    "email": "nrusso@digichanges.com",
    "url": "https://github.com/DigiChanges"
  },
  "scripts": {
    "pretest": "eslint -c .eslintrc.cjs ./",
    "test": "jest",
    "git-merge": "git submodule update --remote --merge",
    "git-update": "git submodule update --recursive --remote",
    "git-clone": "git submodule update --init --recursive"
  },
  "publishConfig": {
    "access": "public"
  },
  "main": "bin/createProject.js",
  "keywords": [
    "nexp",
    "cli",
    "nexp-cli",
    "boilerplate",
    "scaffolding",
    "typescript",
    "koa",
    "express",
    "mongoose",
    "mikro-orm",
    "type-orm"
  ],
  "engines": {
    "pnpm": ">=7.0.0",
    "node": ">=16.*"
  },
  "dependencies": {
    "boxen": "^7.0.1",
    "chalk": "^5.2.0",
    "commander": "^9.5.0",
    "fs-extra": "^10.1.0",
    "glob": "^8.1.0",
    "handlebars": "^4.7.7",
    "handlebars-copy": "^1.17.0",
    "inquirer": "^9.1.4",
    "listr2": "^4.0.5",
    "lodash": "^4.17.21",
    "replace-in-file": "^6.3.5",
    "walkdir": "^0.4.1"
  },
  "devDependencies": {
    "eslint": "^8.33.0",
    "eslint-config-xo": "^0.27.2",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^3.4.1",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^9.5.0",
    "prettier": "^1.19.1"
  },
  "type": "module",
  "jest": {
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "eslintConfig": {
    "extends": [
      "xo",
      "prettier"
    ],
    "env": {
      "jest": true,
      "node": true
    }
  },
  "repository": "git@github.com:DigiChanges/nexp-cli.git",
  "license": "MIT"
}
